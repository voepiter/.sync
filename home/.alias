#!/usr/bin/bash

# цветной `ls' to be colorized:
export LS_OPTIONS='--time-style=long-iso --color=auto  --group-directories-first'
[ -f ~/.dircolors ] && eval "$(dircolors -b ~/.dircolors)"
alias l="ls -lAh $LS_OPTIONS"

alias ..='cd ..'		#parent dir
alias ...='cd ../..'		#2 dir up
alias ....='cd ../../..'	#3 dir up
alias -- -='cd -'			#previous dir

# Работа с файлами и системой
alias rs='rsync -avzP'
alias e='mcedit'
alias md='mkdir -p'
alias i='sudo apt -y install'
alias g='grep --color=auto'
alias du='grc du -h -d 1'
alias diff='diff -U0'
alias rm='trash-put'

# Сеть и процессы
alias ss='sudo ss -tulpn | awk '\''NR>1 {split($7,a,","); split(a[1],b,"="); print $1, b[2], $5}'\'' | column -t'
alias ps="ps -e -o pid,user,%cpu,rss,tty,stat,args --forest | g -v 'ps -e'"

# Git
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m'
alias gp='git push'
alias gl="git log --graph --pretty=format:'%C(223)%h%Creset %C(65)[%cr]%Creset %an - %s %d'"

# Docker
alias d='docker'
alias dc='docker compose'
alias dcu='docker compose up -d'     # Поднять в фоне
alias dcd='docker compose down'      # Уложить
alias dcr='docker compose restart'   # Рестартнуть сервис
# Использование: de <container> /bin/bash
alias de='docker exec -it'
# Последние 50 строк и следить за новыми
alias dl='docker logs -f --tail 50'
# Посмотреть все контейнеры компактно (красивая таблица)
alias dps='docker ps --format "table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.Ports}}"'
# Посмотреть только запущенные (кратко)
alias dls='docker container ls'
alias di='docker images'
alias dv='docker volume ls'

# WSL Clipboard
alias copy='clip.exe'
alias paste="powershell.exe -command 'Get-Clipboard' | tr -d '\r'"